function Fibonacci_Sequential_Iterative (Value : Natural) return Natural is
   Previous : Natural := 1;
   Previous_Previous : Natural := 0;
begin
   if Value < 2 then
      return Value;
   end if;

   for I in 2 .. Value loop
      declare
         Temp : Natural;
      begin
         Temp := Previous + Previous_Previous;
         Previous_Previous := Previous;
         Previous := Temp;
      end;

   end loop;
   return Previous;
end Fibonacci_Sequential_Iterative;
