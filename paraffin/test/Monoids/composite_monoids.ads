generic
   type Element_Type is private;
   with function Reducer (Left, Right : Element_Type) return Element_Type;
   Identity_Value : Element_Type;
package Composite_Monoids is
   pragma Pure;

   type Monoid_Type is tagged private;

   procedure Reduce (L, R : in out Monoid_Type);

   function Identity return Monoid_Type;

   procedure Reset (Monoid : in out Monoid_Type);

   function Value (Monoid : Monoid_Type) return Element_Type;

private

   type Monoid_Type is tagged
      record
         Item : Element_Type := Identity_Value;
      end record;
end Composite_Monoids;
